{
    "name": "Backend Container",
    "dockerComposeFile": [
        "../../docker-compose.dev.yml"
    ],
    "service": "backend",
    "shutdownAction": "none",
    "workspaceFolder": "/workspace/backend",
    // Add your settings here
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "mtxr.sqltools",
                "mtxr.sqltools-driver-pg",
                "ms-python.black-formatter",
                "njpwerner.autodocstring",
                "SolarLiner.linux-themes"
            ],
            "settings": {
                "sqltools.connections": {
                    "previewLimit": 50,
                    "server": "db",
                    "port": 5432,
                    "driver": "PostgreSQL",
                    "name": "postgres",
                    "database": "postgres",
                    "username": "postgres",
                    "password": "postgres"
                },
                "sqltools.autoConnectTo": ""
            }
        }
    },
    "postCreateCommand": "apt-get update -y && pip install --upgrade pip && pip install -r requirements.txt && python main.py",
    "remoteUser": "root"
}